extends layout

block content
	section.posting
		form(action="" method="post" enctype="multipart/form-data")
			input(type="text" name="title" placeholder="Заголовок" required)
			br
			input(type="text" name="rubric" placeholder="Рубрика (необязательно)")
			br
			textarea(name="content" placeholder="Текст поста")#content_post
			br
			input(type="file" name="img1" accept="image/jpeg" data-changed=false size=1)
			br
			input(type="file" name="img2" accept="image/jpeg" data-changed=false size=1).hidden
			br
			input(type="file" name="img3" accept="image/jpeg" data-changed=false size=1).hidden
			br
			article.but_read.sub_post Отправить
			input(type="submit")#sub_post_but